@model Assignment7.ViewModels.RandomColorsVM

@{
    ViewBag.Title = "NewQuestion";
}

<div class="container" style="margin-top: 100px">
    <div style="width: 500px; height: 300px; background-color:@Model.Color1.Name; padding: 20px 20px 20px 20px;" >
        <h1>What color is this?</h1>
    </div>
    @using (@Html.BeginForm())
    {
    <table style="margin-top: 20px; font-size: 1.3em;">
        <tr>
            <td>
                @Html.RadioButton("choiceID", @Model.Color1.ID)
            </td>
            <td>
                <p>@Model.Color1.Name</p>
            </td>
        </tr>
        <tr>
            <td>
                @Html.RadioButton("choiceID", @Model.Color2.ID)
            </td>
            <td>
                <p>@Model.Color2.Name</p>
            </td>
        </tr>
        <tr>
            <td>
                @Html.RadioButtonFor(c => c.Answer, "Answer")
            </td>
            <td>
                <p>@Model.Color3.Name</p>
            </td>
        </tr>
        <tr>
            <td>
                @Html.RadioButtonFor(c => c.Answer, "Answer")
            </td>
            <td>
                <p>@Model.Color4.Name</p>
            </td>
        </tr>
    </table>
    @Html.Hidden("answerID", @Model.Color1.ID)
    <input type="submit" value="Submit" />
    }
</div>


