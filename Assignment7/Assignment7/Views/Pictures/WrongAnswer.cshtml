@using Assignment7.Models

@model Assignment7.Models.Picture

@{
    ViewBag.Title = "Wrong answer";
}

<h2>What animal is this?</h2>

<div class="form-horizontal">
    <h4>Question nr. @ViewBag.NoTest / @ViewBag.NbTests</h4>
    <hr />

    <h4>Wrong! The right answer was @Model.AnimalName</h4>
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            @Html.Image("/img/" + Model.PictureName, Model.AnimalName, "100")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span class="input-group-btn">
                <button class="btn btn-default" onclick="location.href = '@Url.Action("Test", new { @continue = true })'" />Continue
            </span>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to the pictures", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
