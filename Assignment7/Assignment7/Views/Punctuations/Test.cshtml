@model List<Assignment7.Exercises.Punctuations.Character>

@{
    ViewBag.Title = "Punctuation marks";
}

<h2>Please, fill in the gaps</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (Model[i].IsPunctuationMark)
            {
                @Html.Hidden("model.Index", @i)
                @Html.Hidden("model[" + @i + "].Value", Model[i].Value)
                @Html.Hidden("model[" + @i + "].IsPunctuationMark", true)

                string id = "model[" + @i + "].EnteredValue";
                <input id=@id name=@id type="text" value=@Model[i].EnteredValue style="margin:0 0 0 0; padding:0 0 0 0; width:2em; text-align:center" />
            }
            else
            {
                @Html.DisplayName(Model[i].Value)
            }
        }

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Validate" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to start", "Index", "Main")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
